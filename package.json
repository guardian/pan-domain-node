{
  "name": "pan-domain-node",
  "version": "1.0.0",
  "description": "NodeJs implementation of Guardian pan-domain auth verification",
  "main": "dist/panda.cjs.js",
  "jsnext:main": "dist/panda.es6.js",
  "directories": {
    "test": "spec"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "rollup -c rollup.config.cjs.js && rollup -c rollup.config.es6.js",
    "ava": "ava",
    "lint": "eslint lib spec",
    "test": "npm run ava",
    "posttest": "npm run lint",
    "dev": "npm run ava -- --watch",
    "prepublish": "npm test && npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guardian/pan-domain-node.git"
  },
  "keywords": [
    "auth",
    "guardian"
  ],
  "author": {
    "name": "Chris Finch",
    "email": "chris.finch@guardian.co.uk"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guardian/pan-domain-node/issues"
  },
  "homepage": "https://github.com/guardian/pan-domain-node",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-rollup": "1.2.0",
    "babel-register": "^6.14.0",
    "eslint": "^3.5.0",
    "pan-domain-public-keys": "^1.2.0",
    "pan-domain-validate-user": "^1.0.2",
    "rollup": "^0.35.11",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-node-resolve": "^2.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
